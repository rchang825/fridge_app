<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>  
<div class="position-relative">
  <%= link_to "+", new_fridge_item_path, class: "btn btn-primary btn-lg position-absolute top-0 end-0" %> 
  
  <h1>Fridge items</h1>
  <turbo-frame id="fridge_items_list">
    <table class="table table-hover" style="width: 100%">
      <thead>
        <tr>
          <th scope="col">
            <% if @sort_param == "name" %>
              <%= link_to "Name" %>
            <% else %>
              <%= link_to "Name", url_for(sort: "name") %>
            <% end %>
            
          </th>
          <th scope="col">Quantity</th>
          <th scope="col">
            <% if @sort_param == "exp" %>
              <%= link_to "Expiration Date" %>
            <% else %>
              <%= link_to "Expiration Date", url_for(sort: "exp") %>
            <% end %>
          </th>
          <th class="notes extra" scope="col">Notes</th>
          <th class="tags extra" scope="col">Tags</th>
          <th class="grocery extra" scope="col">Grocery<th>
        </tr>
      </thead>
      <tbody>
        <% @fridge_items.each do |fridge_item| %>
            <%= render "fridge_item_row", fridge_item: fridge_item %>
        <% end %>
      </tbody>
    </table>
  </turbo-frame>
 <%# link_to "New fridge item", new_fridge_item_path %> 
<% else %>
  <h1>Not Signed In</h1>
  <p>Please sign up or sign in to view and edit fridge items.</p>
<% end %>
</div>







<% if false %>
<div id="fridge_items">
  <% @fridge_items.each do |fridge_item| %>
      <%= render fridge_item %>
      <p>
        <%= link_to "Show this fridge item", fridge_item %>
      </p>
  <% end %>
</div>
<% end %>